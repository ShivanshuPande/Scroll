
generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  userName      String @unique
  password      String
  firstName     String
  lastName      String
  post          Post[]
}


model Post {
  id        String  @id @default(uuid())
  title     String
  content   String
  published Boolean @default(false)
  authorId  String
  author    User    @relation(fields: [authorId], references: [id])
}
